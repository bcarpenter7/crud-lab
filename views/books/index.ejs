<%- include('../partials/header') %>
<h2>All Books</h2>
<table id="example">
    <thead>
      <tr>
        <th>Author</th>
        <th>Title</th>
        <th>Page Numbers</th>
        <th>Genre</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% books.forEach(b => {   %>
  
        <tr>
          <td><%= b.author %></td>
          <td><%= b.title %></td>
          <td><%= b.pages %></td>
          <td><%= b.genre %></td>
        <td>
            <form action="/books/<%= b.id %>?_method=DELETE" method="POST">
                 <button>X</button>
            </form>
        </td>
        </tr>
  
      <% }); %>
    </tbody>
  </table>


<%- include('../partials/footer') %>